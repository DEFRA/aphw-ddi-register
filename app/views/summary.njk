{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block beforeContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      {{ govukBackLink({
        text: "Back",
        href: "/microchip-number",
        attributes: {
          id: "back"
        }
        }) 
      }}
    </div>
  </div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Owner</h2>

    {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Name"
          },
          value: {
            text: model.name
          },
          actions: {
            items: [
              {
                href: "/name",
                text: "Change",
                visuallyHiddenText: "name"
              }
            ]
          }
        },
        {
          key: {
            text: "Email"
          },
          value: {
            text: model.email
          },
          actions: {
            items: [
              {
                href: "/email",
                text: "Change",
                visuallyHiddenText: "email"
              }
            ]
          }
        },
        {
          key: {
            text: "Address"
          },
          value: {
            html: model.address | join("<br>")
          },
          actions: {
            items: [
              {
                href: "/address",
                text: "Change",
                visuallyHiddenText: "address"
              }
            ]
          }
        }
      ]
    }) }}

    <h2 class="govuk-heading-m">Dog</h2>

    {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Microchipped"
          },
          value: {
            text: model.microchipped
          },
          actions: {
            items: [
              {
                href: "/microchipped",
                text: "Change",
                visuallyHiddenText: "microchipped"
              }
            ]
          }
        },
        {
          key: {
            text: "Microchip Number"
          },
          value: {
            text: model.microchipNumber
          },
          actions: {
            items: [
              {
                href: "/microchip-number",
                text: "Change",
                visuallyHiddenText: "microchipNumber"
              }
            ]
          }
        }
      ]
    }) }}

    {{ govukButton({
        text: "Continue",
        href: "/confirmation"
      }) }}
</div>

{% endblock %}
