{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% extends '_layout.njk' %}

{% block pageTitle %}{{ serviceName }}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m">Owner</h2>

    {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Name"
          },
          value: {
            text: model.summary.register.name
          },
          actions: {
            items: [
              {
                href: "/register/name",
                text: "Change",
                visuallyHiddenText: "name"
              }
            ]
          }
        },
        {
          key: {
            text: "Email"
          },
          value: {
            text: model.summary.register.email
          },
          actions: {
            items: [
              {
                href: "/register/email",
                text: "Change",
                visuallyHiddenText: "email"
              }
            ]
          }
        },
        {
          key: {
            text: "Address"
          },
          value: {
            html: model.summary.register.address | join("<br>")
          },
          actions: {
            items: [
              {
                href: "/register/address",
                text: "Change",
                visuallyHiddenText: "address"
              }
            ]
          }
        },
        {
          key: {
            text: "Date of birth"
          },
          value: {
            text: model.summary.register.dateOfBirth
          },
          actions: {
            items: [
              {
                href: "/register/date-of-birth",
                text: "Change",
                visuallyHiddenText: "Date of birth"
              }
            ]
          }
        },
        {
          key: {
            text: "Telephone"
          },
          value: {
            text: model.summary.register.phone
          },
          actions: {
            items: [
              {
                href: "/register/phone-number",
                text: "Change",
                visuallyHiddenText: "Telephone number"
              }
            ]
          }
        }
      ]
    }) }}

    <h2 class="govuk-heading-m">Dog</h2>

    {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Name"
          },
          value: {
            text: model.summary.dog.name
          },
          actions: {
            items: [
              {
                href: "/dog/name",
                text: "Change",
                visuallyHiddenText: "Dog name"
              }
            ]
          }
        },
        {
          key: {
            text: "Date of birth"
          },
          value: {
            text: model.summary.dog.dateOfBirth
          },
          actions: {
            items: [
              {
                href: "/dog/date-of-birth",
                text: "Change",
                visuallyHiddenText: "Dog date of birth"
              }
            ]
          }
        },
        {
          key: {
            text: "Colour"
          },
          value: {
            text: model.summary.dog.colour
          },
          actions: {
            items: [
              {
                href: "/dog/colour",
                text: "Change",
                visuallyHiddenText: "Dog colour"
              }
            ]
          }
        },
        {
          key: {
            text: "Gender"
          },
          value: {
            text: model.summary.dog.gender
          },
          actions: {
            items: [
              {
                href: "/dog/gender",
                text: "Change",
                visuallyHiddenText: "Dog gender"
              }
            ]
          }
        },
        {
          key: {
            text: "Microchipped"
          },
          value: {
            text: model.summary.dog.microchipped
          },
          actions: {
            items: [
              {
                href: "/dog/microchipped",
                text: "Change",
                visuallyHiddenText: "microchipped"
              }
            ]
          }
        },
        {
          key: {
            text: "Microchip Number"
          },
          value: {
            text: model.summary.dog.microchipNumber
          },
          actions: {
            items: [
              {
                href: "/dog/microchip-number",
                text: "Change",
                visuallyHiddenText: "microchipNumber"
              }
            ]
          }
        },
        {
          key: {
            text: "Preference"
          },
          value: {
            text: model.summary.dog.preference
          },
          actions: {
            items: [
              {
                href: "/dog/preference",
                text: "Change",
                visuallyHiddenText: "preference"
              }
            ]
          }
        }
      ]
    }) }}

    {{ govukButton({
        text: "Continue",
        href: model.formAction
      }) }}
</div>

{% endblock %}
